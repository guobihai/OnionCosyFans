<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_no_data" />

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/moment_no_data"
            android:textColor="@color/text"
            android:textSize="@dimen/base_font_size_13" />

    </LinearLayout>

    <Button
        android:id="@+id/btnPost"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_above="@+id/tv_see_other"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/moment_save_btn_bg"
        android:text="@string/moment_btn_post"
        android:textColor="@color/white"
        android:textSize="@dimen/base_font_size_13" />

    <TextView
        android:id="@+id/tv_see_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="@string/moment_tv_see_other"
        android:textColor="@color/bluce"
        android:textSize="@dimen/base_font_size_16" />

</RelativeLayout>