<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_disscount_left"
        android:layout_width="wrap_content"
        android:padding="15dp"
        android:textSize="@dimen/base_font_size_13"
        android:textColor="@color/text"
        android:text="BUy 2Get off,Uy 2Get offUy 2Get off"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/tv_disscount_right"
        android:layout_width="wrap_content"
        android:padding="15dp"
        android:drawablePadding="10dp"
        android:textSize="@dimen/base_font_size_12"
        android:drawableRight="@mipmap/icon_right_arrow"
        android:textColor="@color/orange"
        android:text="@string/item_add_order"
        android:layout_height="wrap_content"/>


    <View
        android:layout_below="@+id/tv_disscount_right"
      style="@style/BaseAppLineStyle"

        />
</RelativeLayout>