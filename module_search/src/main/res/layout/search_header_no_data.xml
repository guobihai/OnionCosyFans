<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:paddingTop="25dp"
    android:orientation="vertical"

    android:layout_height="wrap_content">

    <ImageView

        android:layout_width="136dp"
        android:src="@mipmap/icon_cart_logo"
        android:layout_height="78dp"
        android:scaleType="center"
        />

    <TextView
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_tips"
        android:textSize="@dimen/base_font_size_12"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_show_tost"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/base_font_size_13"
        android:background="@color/base_bg"
        android:textColor="@color/text"
        android:text="@string/search_recommont"
        android:gravity="center_horizontal"
        android:padding="10dp"
        />
</LinearLayout>