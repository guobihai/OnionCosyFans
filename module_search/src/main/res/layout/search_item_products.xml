<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingLeft="@dimen/base_padding"
    android:paddingRight="@dimen/base_padding"
    android:layout_marginRight="5dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="wrap_content">




    <LinearLayout
        android:id="@+id/layou_body"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/img_products"
                android:layout_width="@dimen/base_image_width"
                android:layout_height="@dimen/base_image_height"
                android:scaleType="fitCenter"
                android:background="@mipmap/icon_placeholder_youju"
                />

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/img_item_logon"
                android:visibility="gone"
                android:layout_width="@dimen/base_image_width"
                android:layout_height="@dimen/base_image_height"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/item_detail_no_sku"
                />
        </RelativeLayout>





        <RelativeLayout
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_image_height">


    <TextView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/item_products_name"
        android:textColor="@color/text"
        android:text="Home Products veerison"
        android:textSize="@dimen/base_font_size_13"
        android:maxLines="4"
        android:gravity="left"
        android:layout_height="wrap_content"/>



        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView

                android:id="@+id/item_products_price"
                android:layout_below="@+id/item_button_dis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/base_font_size_15"
                android:textColor="@color/bluce"
                android:text="RM299"
                android:textStyle="bold"
                />


            <TextView
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/item_products_price"
                android:id="@+id/item_products_price_real"
                android:layout_below="@+id/item_button_dis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/base_font_size_13"
                android:textColor="@color/text_sub_dark"
                android:text="M.S 99"
                android:textStyle="bold"
                />
        </LinearLayout>


    </RelativeLayout>

    </LinearLayout>

        <View
            android:layout_marginTop="20dp"
            style="@style/BaseAppLineStyle"
            />
</LinearLayout>