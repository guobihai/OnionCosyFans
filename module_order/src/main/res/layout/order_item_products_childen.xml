<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_alignParentLeft="true"
    android:layout_toLeftOf="@+id/img_cancle"
    android:padding="10dp"
    android:id="@+id/layout_left"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <ImageView
        android:id="@+id/img_products"
        android:layout_width="70dp"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/home_item_detail"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        />


    <RelativeLayout
        android:layout_toRightOf="@+id/img_products"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:layout_height="90dp">

        <TextView
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:id="@+id/tv_childen_title"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:textColor="@color/text"
            android:textStyle="normal"
            android:textSize="@dimen/base_font_size_12"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_sku"
            android:text="ddd"
            android:layout_below="@+id/tv_childen_title"
            style="@style/TradeBaseTextStyle"
            />

        <TextView
            android:id="@+id/tv_childen_monery"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:text="22"
            android:textSize="@dimen/base_font_size_14"
            android:textColor="@color/bluce"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_size"
            android:text="2"
            style="@style/TradeBaseTextStyle"
            android:paddingBottom="0dp"
            />

    </RelativeLayout>

</RelativeLayout>
