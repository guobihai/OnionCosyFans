<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/icon_copu_bg_use"
    android:layout_width="match_parent"
    android:id="@+id/rl__base_bg"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/layout_left"
        android:layout_width="100dp"
        android:layout_alignParentLeft="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_monery"
            android:layout_width="wrap_content"
            android:text="ï¿¥"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>


        <TextView

            android:layout_toLeftOf="@+id/tv_copn_monery"
            android:id="@+id/tv_copn_monery"
            android:layout_width="wrap_content"
            android:text="20"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/base_font_size_28"
            android:layout_height="wrap_content"
            tools:ignore="NotSibling" />


    </LinearLayout>



    <RelativeLayout
        android:layout_toRightOf="@+id/layout_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_coupon_center"
            android:layout_width="wrap_content"
            android:padding="15dp"
            android:textSize="@dimen/base_font_size_16"
            android:textColor="@color/text"
            android:text="Min.Spend.RM299"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_use_time"
            android:layout_below="@+id/tv_coupon_center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:textSize="@dimen/base_font_size_12"
            android:textColor="@color/text_sub_dark"
            android:text="2019.06.22-2019.09.34"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


