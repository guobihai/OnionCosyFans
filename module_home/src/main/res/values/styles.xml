<resources>

    <style name="HomeTabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
    </style>



<!--        基础样式-->
    <style name="ItemDetailTextStyle">
        <item name="android:textSize">@dimen/base_font_size_13</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/base_padding</item>
        <item name="android:paddingRight">@dimen/base_padding</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/text</item>

    </style>



<!--    详情页标题左-->
    <style name="ItemDetailTextLeftStyle" parent="ItemDetailTextStyle">
        <item name="android:textSize">@dimen/base_font_size_13</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>


<!--    右边橙色样式-->
    <style name="ItemDetailTextRightStyle" parent="ItemDetailTextStyle">
        <item name="android:textSize">@dimen/base_font_size_13</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:layout_alignParentLeft">false</item>
    </style>




    <!--菜单栏的样式-->
    <style name="HomeActionMenuWhiteTheme">
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

<!--    tableStyle-->
    <style name="HomeTablayoutstyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabBackground">@color/white</item>
        <item name="tabIndicatorColor">@color/bluce</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/bluce</item>
        <item name="android:textSize">@dimen/base_font_size_11</item>
        <item name="android:textColor">@color/text</item>
    </style>




</resources>
