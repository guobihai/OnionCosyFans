<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/my_dialog_income_bg"
    android:orientation="vertical"
    app:divider="@drawable/my_center_line"
    app:dividerPadding="10dp"
    app:showDividers="middle">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="8dp"
        android:text="@string/my_statistics_userdetail"
        android:textColor="@color/text"
        android:textSize="@dimen/base_font_size_16"

        />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_order_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_detail_order_quantity"
            android:textColor="@color/text"
            android:textSize="@dimen/base_font_size_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_tv_order_quantity_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/app_name"
            android:textColor="@color/orange"
            android:textSize="@dimen/base_font_size_13"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/tv_order_quantity"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/my_detail_total"
            android:textColor="@color/text"
            android:textSize="@dimen/base_font_size_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_quantity" />

        <TextView
            android:id="@+id/tv_total_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:text="@string/app_name"
            android:textColor="@color/orange"
            android:textSize="@dimen/base_font_size_13"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_total"
            app:layout_constraintLeft_toRightOf="@+id/tv_total" />

        <TextView
            android:id="@+id/tv_total_refunded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/my_detail_total"
            android:textColor="@color/text"
            android:textSize="@dimen/base_font_size_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_total" />

        <TextView
            android:id="@+id/tv_total_refunded_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:text="@string/app_name"
            android:textColor="@color/orange"
            android:textSize="@dimen/base_font_size_13"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_total_refunded"
            app:layout_constraintLeft_toRightOf="@+id/tv_total_refunded" />

        <TextView
            android:id="@+id/tv_contribution_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/my_detail_total"
            android:textColor="@color/text"
            android:textSize="@dimen/base_font_size_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_total_refunded" />

        <TextView
            android:id="@+id/tv_contribution_income_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:text="@string/app_name"
            android:textColor="@color/orange"
            android:textSize="@dimen/base_font_size_13"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_contribution_income"
            app:layout_constraintLeft_toRightOf="@+id/tv_contribution_income" />

        <TextView
            android:id="@+id/tv_per_customer_transac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/my_detail_total"
            android:textColor="@color/text"
            android:textSize="@dimen/base_font_size_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_contribution_income" />

        <TextView
            android:id="@+id/tv_per_customer_transac_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:text="@string/app_name"
            android:textColor="@color/orange"
            android:textSize="@dimen/base_font_size_13"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_per_customer_transac"
            app:layout_constraintLeft_toRightOf="@+id/tv_per_customer_transac" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/llLevelLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" />

    <Button
        android:id="@+id/btnCloseDialog"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/my_dialog_btn_comfig_bg"
        android:text="@string/my_tv_close_btn"
        android:textColor="@color/white"
        android:textSize="@dimen/base_font_size_15" />

</android.support.v7.widget.LinearLayoutCompat>