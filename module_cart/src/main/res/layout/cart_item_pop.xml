<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/layout_item"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/view_line"
      style="@style/BaseAppLineStyle"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        />
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/img_item"
                android:background="@drawable/cart_item_bg_shape"
                android:layout_width="100dp"
                android:scaleType="centerInside"
                android:src="@mipmap/home_item_detail"
                android:layout_height="100dp"/>

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/img_no_sku"
                android:visibility="gone"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:minHeight="218dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/item_detail_no_sku"
                />
        </RelativeLayout>


    <LinearLayout
        android:paddingLeft="10dp"
        android:minHeight="100dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/tv_title"
            android:maxLines="3"
            android:ellipsize="end"
            android:text=""
            android:layout_toRightOf="@+id/tv_childen_tag"
            android:layout_width="match_parent"
            android:textColor="@color/text"
            android:textStyle="normal"
            android:textSize="@dimen/base_font_size_12"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_pop"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_marginRight="10dp"
                android:drawablePadding="10dp"
                android:textColor="@color/orange"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_alignParentLeft="true"
                android:layout_above="@+id/tv_childen_monery"
                android:background="@drawable/cart_item_pop_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_toRightOf="@+id/tv_pop"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:id="@+id/tv_cup"
                android:layout_marginRight="10dp"
                android:text="@string/cart_vour"
                android:textColor="@color/orange"
                android:background="@drawable/cart_item_pop_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_monery"
                android:layout_width="wrap_content"
                android:text="RM299"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:textSize="@dimen/base_font_size_15"
                android:textColor="@color/bluce"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_monery"
                android:id="@+id/tv_monery2"
                android:layout_width="wrap_content"
                android:text="RM299"
                android:textStyle="bold"
                android:textSize="@dimen/base_font_size_13"
                android:textColor="@color/text_sub"
                android:layout_height="wrap_content"/>



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_mitCount"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_limit"
            android:layout_width="wrap_content"
            android:text="没人限购8件"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/base_font_size_14"
            android:textColor="@color/text"
            android:layout_height="wrap_content"/>
        </RelativeLayout>



    </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/layout_add_cart"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_height="wrap_content">

        <ImageView
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:src="@mipmap/icon_cart_list"
            android:layout_height="40dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/view_wihite"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white"
        />

</LinearLayout>