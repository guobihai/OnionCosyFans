<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/cart_item_bg_shape"
    android:orientation="vertical">

    <RelativeLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/tv_show1"
            android:textSize="@dimen/base_font_size_12"
            android:textColor="@color/white"
            android:text="满减"
            android:padding="3dp"
            android:background="@drawable/cart_item_title_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_disc"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_show1"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:text="满1折9件"
            android:textSize="@dimen/base_font_size_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>




        <TextView
            android:id="@+id/tv_go_order"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:text="去凑单"
            android:textSize="@dimen/base_font_size_12"
            android:layout_width="wrap_content"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:drawableRight="@mipmap/icon_right_down"
            android:layout_height="wrap_content"/>
    </RelativeLayout>



    <com.yanzhenjie.recyclerview.SwipeRecyclerView
        android:layout_marginTop="10dp"
        android:background="@color/orange"
        android:id="@+id/lv_childen_revyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>