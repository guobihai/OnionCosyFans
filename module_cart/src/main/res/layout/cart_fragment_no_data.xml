<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:paddingTop="25dp"
    android:orientation="vertical"

    android:layout_height="wrap_content">

    <ImageView

        android:layout_width="136dp"
        android:src="@mipmap/icon_cart_logo"
        android:layout_height="78dp"
        android:scaleType="center"
        />

    <TextView
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cart_tost"
        android:textSize="@dimen/base_font_size_12"
        android:textColor="@color/text_show_tost"
        />


    <TextView
        android:id="@+id/btn_cart_nodata"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="206dp"
        android:layout_height="34dp"
        android:text="@string/cart_go_shopping"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/base_font_size_13"
        android:background="@drawable/cart_btn_cart_nodata_blue"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/base_font_size_13"
        android:background="@color/base_bg"
        android:text="@string/cart_recommend"
        android:gravity="center_horizontal"
        android:padding="10dp"
        />
</LinearLayout>